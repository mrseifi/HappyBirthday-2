<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="160dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/form_date"
        android:layout_marginStart="30dp"
        android:src="@drawable/phptp"

        />
    <TextView
        android:id="@+id/form_date"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:text="@string/_11_25_2020"
        android:background="@color/blue"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
         />

    <TextView
        android:id="@+id/form_first_name"
        android:text="@string/reza"
        android:background="@color/red"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/form_date"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_height="80dp"
        android:layout_width="160dp"
        />
    <TextView
        android:id="@+id/form_last_name"
        android:text="@string/seifi"
        android:background="@color/green"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/form_first_name"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="140dp"
        android:layout_height="80dp"
        android:layout_width="160dp"
        />
    <TextView
        android:id="@+id/Form_date_of_birth"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/form_first_name"
        android:layout_marginStart="30dp"
        android:background="@color/yellow"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_height="80dp"
        android:layout_width="160dp"
        android:text="@string/_06_08_1983"
        />
    <TextView
        android:id="@+id/form_Driver_license"
        android:text="@string/Driver_license"
        android:background="@color/violet"
        android:gravity="center"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/Form_date_of_birth"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/form_last_name"
        android:layout_marginTop="30dp"
        android:layout_height="80dp"
        android:layout_width="160dp"
        />
    <TextView
        android:id="@+id/form_address"
        android:text="@string/address_nbkakbjsbvjhh_sbhvs"
        android:background="@color/orange"
        android:textSize="15sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/Form_date_of_birth"
        android:layout_marginTop="30dp"
        android:layout_height="200dp"
        android:layout_width="350dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>